{
  "id": "betterGR",
  "realm": "betterGR",
  "enabled": true,
  "defaultSignatureAlgorithm": "RS256",
  "roles": {
    "realm": [
      {
        "id": "student-role",
        "name": "student",
        "description": "Student role",
        "composite": false
      },
      {
        "id": "staff-role",
        "name": "staff",
        "description": "Staff role",
        "composite": false
      },
      {
        "id": "admin-role",
        "name": "admin",
        "description": "Administrator role",
        "composite": false
      }
    ]
  },
  "clients": [
    {
      "clientId": "api-gateway",
      "surrogateAuthRequired": false,
      "enabled": true,
      "alwaysDisplayInConsole": false,
      "clientAuthenticatorType": "client-secret",
      "secret": "**********",
      "redirectUris": [
        "http://localhost:3000/*",
        "http://localhost:3000/callback",
        "http://localhost:1234/*"
      ],
      "webOrigins": [
        "http://localhost:3000"
      ],
      "protocolMappers": [
        {
          "name": "audience",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "config": {
            "included.client.audience": "api-gateway",
            "id.token.claim": "true",
            "access.token.claim": "true"
          }
        },
        {
          "name": "roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "config": {
            "claim.name": "realm_access.roles",
            "jsonType.label": "String",
            "multivalued": "true",
            "userinfo.token.claim": "true",
            "id.token.claim": "true",
            "access.token.claim": "true"
          }
        },
        {
          "name": "username as name",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-property-mapper",
          "config": {
            "claim.name": "name",
            "jsonType.label": "String",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true",
            "user.attribute": "username"
          }
        }
      ]
    }
  ],
  "users": [
    {
      "id": "123456789",
      "username": "user1",
      "enabled": true,
      "email": "user1@bettergr.com",
      "firstName": "user1",
      "lastName": "user1",
      "realmRoles": ["student"],
      "credentials": [
        {
          "type": "password",
          "value": "user123",
          "temporary": false
        }
      ]
    },
    {
      "id": "987654321",
      "username": "user2",
      "enabled": true,
      "email": "user2@bettergr.com",
      "firstName": "user2",
      "lastName": "user2",
      "realmRoles": ["student"],
      "credentials": [
        {
          "type": "password",
          "value": "user123",
          "temporary": false
        }
      ]
    },
    {
      "id": "admin-id-789",
      "username": "admin",
      "enabled": true,
      "email": "admin@bettergr.com",
      "firstName": "admin",
      "lastName": "admin",
      "realmRoles": ["staff"],
      "credentials": [
        {
          "type": "password",
          "value": "admin123",
          "temporary": false
        }
      ]
    }
  ],
  "authenticationFlows": [
    {
      "alias": "browser",
      "description": "Browser-based authentication",
      "providerId": "basic-flow",
      "topLevel": true,
      "authenticationExecutions": [
        {
          "authenticator": "auth-cookie",
          "requirement": "ALTERNATIVE"
        },
        {
          "authenticator": "auth-username-password-form",
          "requirement": "REQUIRED"
        }
      ]
    }
  ],
  "attributes": {
    "cibaBackchannelTokenDeliveryMode": "poll",
    "cibaExpiresIn": "120",
    "cibaAuthRequestedUserHint": "login_hint",
    "oauth2DeviceCodeLifespan": "600",
    "oauth2DevicePollingInterval": "5",
    "parRequestUriLifespan": "60",
    "cibaInterval": "5",
    "realmReusableOtpCode": "false",
    "frontendUrl": "http://auth.bettergr.org",
    "issuer": "http://auth.bettergr.org/realms/betterGR"
  }
}
